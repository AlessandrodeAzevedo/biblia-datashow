{
  "name": "biblia-datashow",
  "version": "1.0.0",
  "author": "Alessandro de Azevedo <alessandrodeazevedo@gmail.com>",
  "description": "Sistema para Datashow",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron .",
    "ng-high-mem": "node --max_old_space_size=8192 node_modules/@angular/cli/bin/ng",
    "package": "electron-packager . firstdesk",
    "package-win": "electron-packager . biblia-datashow-app --overwrite --asar=true --platform=win32 --arch=x64 --icon=favicon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Biblia Datashow\"",
    "electron-build": "node --max_old_space_size=8192 node_modules/@angular/cli/bin/ng build --prod && electron .",
    "build": "electron-builder -p always",
    "build:dir": "electron-builder --dir",
    "postinstall": "install-app-deps",
    "dist": "ng build --prod",
    "distwin": "ng build --prod && build --win",
    "builder": "electron-builder",
    "build-win32": "electron-packager . --no-tmpdir --platform win32 --out ./dist",
    "aot-electron": "node --max_old_space_size=4096 node_modules/@angular/cli/bin/ng b -op aot -aot -sm -v"
  },
  "private": true,
  "dependencies": {
    "@agm/core": "^1.0.0-beta.3",
    "@angular/animations": "^6.1.4",
    "@angular/cdk": "^6.4.6",
    "@angular/common": "^6.1.4",
    "@angular/compiler": "^6.1.4",
    "@angular/core": "^6.1.4",
    "@angular/forms": "^6.1.4",
    "@angular/http": "^6.1.4",
    "@angular/material": "^6.4.6",
    "@angular/platform-browser": "^6.1.4",
    "@angular/platform-browser-dynamic": "^6.1.4",
    "@angular/platform-server": "^6.1.4",
    "@angular/router": "^6.1.4",
    "angular-bootstrap-md": "^6.2.2",
    "angular-vidbg": "0.0.12",
    "animate.css": "^3.7.0",
    "chart.js": "^2.5.0",
    "core-js": "^2.4.1",
    "css-animator": "^2.3.1",
    "file-saver": "^1.3.8",
    "font-awesome": "^4.7.0",
    "form-data": "^2.3.2",
    "hammerjs": "^2.0.8",
    "jquery": "^3.3.1",
    "ng2-file-upload": "^1.3.0",
    "rxjs": "^6.2.2",
    "rxjs-compat": "^6.2.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular/cli": "^6.1.5",
    "@angular/compiler-cli": "^6.1.4",
    "@angular/language-service": "^6.1.4",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.4.4",
    "electron": "^2.0.8",
    "electron-builder": "^20.28.2",
    "electron-packager": "^12.1.0",
    "electron-updater": "^3.1.1",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.9.1",
    "typescript": "^2.7.*"
  },
  "build": {
    "appId": "com.biblia-datashow.app",
    "productName": "Biblia Datashow",
    "files": [
      "**/*",
      "dist/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "dist"
    },
    "asar": false,
    "win": {
      "icon": "icon-datashow.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "runAfterFinish": true
    }
  }
}
